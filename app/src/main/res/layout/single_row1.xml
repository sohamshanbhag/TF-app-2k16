<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black">

    <TextView
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Technorion"
        android:id="@+id/title"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:textAlignment="center"
        android:background="#7035027b"
        android:textSize="19sp"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:paddingLeft="15dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:id="@+id/image1"
                android:src="@drawable/lf"/>
            <TextView
                style="@style/TextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Mesh Flare"
                android:id="@+id/subtitle1"
                android:fontFamily="roboto" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:paddingLeft="15dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:id="@+id/image2"
                android:src="@drawable/galactictrooper"/>

            <TextView
                style="@style/TextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Galatic Trooper"
                android:id="@+id/subtitle2"
                android:fontFamily="roboto"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:paddingLeft="15dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:id="@+id/image3"
                android:src="@drawable/qc"/>

            <TextView
                style="@style/TextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Quantum Core"
                android:id="@+id/subtitle3"
                android:fontFamily="roboto"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>